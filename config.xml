<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ulduzsoft.smartclock" version="1.0.61" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SmartClock</name>
    <description>
        Smart Clock with weather forecast
    </description>
    <author email="gyunaev@ulduzsoft.com" href="http://www.ulduzsoft.com">
        George Yunaev
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />    
    <platform name="android">
        <allow-intent href="market:*" />
        <custom-config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
        </custom-config-file>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
</widget>
